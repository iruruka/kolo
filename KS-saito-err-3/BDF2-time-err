    real umax = uh2[].max;
    real umin = uh2[].min;
    real E = int2d(Th)(uh2*log(uh2)-uh2-uh2*vh2+(dx(vh2)^2+dy(vh2)^2)/2+vh2^2/2);
    // coutで20桁の精度を設定
    cout.precision(20);
    cout << "mass = " << mass << ", max = " << umax << ", min = " << umin  << ", E = " << E << endl;
ue1=uh2;
}

Nt=10;
dt=1.0e-4;

