    // coutで20桁の精度を設定
    cout.precision(20);
    cout << "mass = " << mass << ", max = " << umax << ", min = " << umin  << ", E = " << E << endl;
ue2=uh2;
}
real err1=sqrt(int2d(Th)((ubasic-ue1)^2));
real err2=sqrt(int2d(Th)((ubasic-ue2)^2));
cout << "err1 " << err1 << ", err2 " << err2 << endl;
